datasource db {
  provider = "postgresql"
  url = "***"
}

generator client {
  provider = "prisma-client-js"
}

model Hue {
  id        Int      @default(autoincrement()) @id
  name      String
  createdAt DateTime @map("created_at") @default(now())

  swatches Swatch[]

  @@map("hue")
  @@unique([name], name: "unique_hue")
}

model Swatch {
  id        Int      @default(autoincrement()) @id
  hex       String
  createdAt DateTime @map("created_at") @default(now())

  hue   Hue @relation(fields: [hueId], references: [id])
  hueId Int @map("hue_id")

  colors SwatchColor[]

  @@map("swatch")
  @@unique([hex, hueId], name: "unique_swatch")
}

model SwatchColor {
  id          Int               @default(autoincrement()) @id
  hex         String
  number      SwatchColorNumber
  paletteType SwatchPaletteType @map("palette_type")
  createdAt   DateTime          @map("created_at") @default(now())

  swatchId Int    @map("swatch_id")
  swatch   Swatch @relation(fields: [swatchId], references: [id])

  @@map("swatch_color")
  @@unique([hex, swatchId], name: "unique_swatch_color")
}

enum SwatchPaletteType {
  SHADE
  TINT

  @@map("swatch_palette_type")
}

enum SwatchColorNumber {
  N100
  N200
  N300
  N400
  N500

  @@map("swatch_color_number")
}
